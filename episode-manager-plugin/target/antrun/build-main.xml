<?xml version="1.0" encoding="UTF-8"?>
<project name="maven-antrun-" default="main">
  <target name="main">
    <property name="plugin.jar" value="/app/target/MirrorBot-1.0.jar" />
    <property name="plugin.filename" value="MirrorBot-1.0.jar" />
    <mkdir dir="/app/../plugins" />
    <delete file="/app/../plugins/${plugin.filename}" failonerror="false" quiet="true" />
    <copy file="${plugin.jar}" todir="/app/../plugins" overwrite="true" />
    <exec executable="bash">
      <arg value="-lc" />
      <arg value="for d in ../data*/plugins; do if [ -d &quot;$d&quot; ]; then rm -f &quot;$d/${plugin.filename}&quot; &amp;&amp; cp '${plugin.jar}' &quot;$d/&quot;; fi; done" />
    </exec>
  </target>
</project>
